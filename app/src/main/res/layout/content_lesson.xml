<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_bottom_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lesson" tools:context="justbe.mindfulness.LessonActivity">


    <TextView
        android:id="@+id/lesson_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Title"
        android:textColor="@color/black"
        android:textSize="@dimen/lesson_title_text_size"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:id="@+id/matter"
        android:orientation="vertical"
        android:layout_below="@+id/lesson_title_text">

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll_bar"
            android:layout_weight="0.37"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingTop="30dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/startButton">



            <TextView
                android:id="@+id/lesson_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:typeface="serif"
                android:text="@string/start_info"
                android:textSize="@dimen/normal_text_size"
                android:textAlignment="gravity"/>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
