<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_bottom_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lesson" tools:context="justbe.mindfulness.LessonActivity">


    <TextView
        android:id="@+id/lesson_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Title"
        android:textColor="@color/black"
        android:textSize="@dimen/lesson_title_text_size"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LessonActivity"
        android:layout_marginTop="45dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/pageIndicator"
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
        </LinearLayout>

    </FrameLayout>




</RelativeLayout>
