<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="60dp"
    android:paddingBottom="@dimen/activity_bottom_margin"
    tools:showIn="@layout/activity_preferences"
    tools:context="justbe.mindfulness.PreferencesActivity"
    android:id="@+id/mainView">

    <TableLayout
        android:id="@+id/preferencesTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/currentUsernameRow"
            android:clickable="false"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/currentUsernameText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/username_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/currentUsername"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:width="0dp"
                android:layout_marginEnd="5dp"
                android:background="@color/bpTransparent"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/currentFirstnameRow"
            android:clickable="false"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/currentFirstnameText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/first_name_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/currentFirstname"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:width="0dp"
                android:layout_marginEnd="5dp"
                android:background="@color/bpTransparent"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/currentLastnameRow"
            android:clickable="false"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/currentLastnameText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/last_name_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/currentLastname"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:width="0dp"
                android:layout_marginEnd="5dp"
                android:background="@color/bpTransparent"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/currentGenderRow"
            android:clickable="false"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/currentGenderText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/gender_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/currentGender"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:width="0dp"
                android:layout_marginEnd="5dp"
                android:background="@color/bpTransparent"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>
        <TableRow
            android:id="@+id/currentResearchStudyRow"
            android:clickable="false"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/currentResearchStudyText"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:text="@string/research_study_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/currentResearchStudy"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:width="0dp"
                android:text="No"
                android:layout_marginEnd="5dp"
                android:background="@color/bpTransparent"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/meditationRow"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/meditationTimeText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/meditations_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/meditationTime"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/lessons_dayRow"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/lessons_day_Text"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/lessons_day_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <Spinner
                android:id="@+id/days_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/lessonRow"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/lessonTimeText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/lessons_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/lessonTime"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/wakeUpRow"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/wakeUpText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/wake_up_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/wakeUpTime"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/goToSleepRow"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/goToSleepText"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:text="@string/go_to_sleep_text"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/goToSleepTime"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/normal_text_size"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow
            android:id="@+id/logOutRow"
            android:clickable="true"
            android:onClick="logout"
            android:background="@drawable/clickable_table_row_selector">
            <TextView
                android:id="@+id/logOut"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="start"
                android:text="@string/log_out_text"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/orange"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>
    </TableLayout>

</LinearLayout>
</ScrollView>
