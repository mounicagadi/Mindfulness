<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MultiChoiceAssessmentActivity"
    tools:showIn="@layout/activity_multi_choice_assessment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_bar"
    android:fillViewport="true"
    android:layout_weight = "1"
    android:paddingTop="25dp"
    android:gravity="center"
    android:layout_above="@+id/nextButton"
    android:layout_alignRight="@+id/nextButton"
    android:layout_alignEnd="@+id/nextButton">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"/>
        <ListView
            android:id="@+id/choiceList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView" />
    </RelativeLayout>

</ScrollView>
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        android:textSize="@dimen/normal_text_size"
        android:onClick="nextPressed"/>
</RelativeLayout>
