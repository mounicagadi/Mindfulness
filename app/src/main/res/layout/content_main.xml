<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="justbe.mindfulness.MainActivity">

        <LinearLayout
            android:id="@+id/weekdaysLayout"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/Meditation0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText0"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/su_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage0"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Meditation1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText1"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/m_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Meditation2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText2"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/t_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Meditation3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText3"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/w_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Meditation4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText4"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/th_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Meditation5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText5"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/f_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Meditation6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/MeditationText6"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/s_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/MeditationImage6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tag="false"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/audioPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_above="@+id/weeklyLessonButton"
        android:layout_marginBottom="95dp"
        android:background="@color/orange"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weekdaysLayout">

        <SeekBar
            android:id="@+id/volumeBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:progress="30"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/currentTime"
            android:layout_above="@+id/volumeBar"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/start"/>
        <TextView
            android:id="@+id/totalTime"
            android:layout_above="@+id/volumeBar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/end" />

    </RelativeLayout>

    <!--android:layout_marginTop="25dp"-->
    <TextView
        android:id="@+id/MeditationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bpWhite"
        android:text="@string/meditation"
        android:gravity="bottom|center_horizontal"
        android:layout_above="@+id/weeklyLessonButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/weeklyLessonButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="lessonButtonPressed"
        style="@android:style/Widget.Button"
        android:background="@drawable/lessons_button_selector">
        <ImageView
            android:id="@+id/weeklyLessonButtonImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:tag="false"
            android:src="@drawable/check_gray_2x"/>
        <TextView
            android:id="@+id/weeklyLessonButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bpWhite"
            android:textSize="@dimen/normal_text_size"
            android:text=""
            android:layout_toRightOf="@+id/weeklyLessonButtonImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/audioButton"
        android:onClick="audioButtonPressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:background="@color/bpTransparent"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/audioPlayer"
        android:layout_centerHorizontal="true" />

</RelativeLayout>