<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingBottom="@dimen/activity_bottom_margin"
        tools:showIn="@layout/activity_create_account"
        tools:context="justbe.mindfulness.CreateAccountActivity"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/firstnameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <EditText
                android:id="@+id/editFirstname"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/first_name_text"
                android:focusable="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lastnameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <EditText
                android:id="@+id/editLastname"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/last_name_text"
                android:focusable="true"/>
        </android.support.design.widget.TextInputLayout>
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/genderRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male_text"
                android:onClick="onGenderButtonClicked"/>
            <RadioButton android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female_text"
                android:onClick="onGenderButtonClicked"/>
        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <EditText
                android:id="@+id/editEmail"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:hint="@string/email_text"
                android:focusable="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:counterEnabled="true"
            app:counterMaxLength="16">
            <EditText
                android:id="@+id/editUsername"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/username_text"
                android:focusable="true"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <EditText
                android:id="@+id/editPassword"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="@string/password_text"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirmPasswordRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <EditText
                android:id="@+id/editConfirmPassword"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="@string/confim_password_text"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setupText"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/title_activity_preferences"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meditationTimeText"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/meditations_text_create_account"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:id="@+id/meditationTime"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:textColor="@color/bpTransparent_black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_dayText"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/lessons_day_text_create_account"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <Spinner
            android:id="@+id/days_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lessonTimeText"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/lessons_text_create_account"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:id="@+id/lessonTime"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:textColor="@color/bpTransparent_black"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wakeUpText"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/wake_up_text_create_account"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:id="@+id/wakeUpTime"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:textColor="@color/bpTransparent_black"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goToSleepText"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/go_to_sleep_text_create_account"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showTimePickerDialog"
            android:id="@+id/goToSleepTime"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:textColor="@color/bpTransparent_black"
            android:textSize="@dimen/small_text_size"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:onClick="createAccountPressed"
            android:text="@string/create_account_button"/>

    </LinearLayout>
</ScrollView>
